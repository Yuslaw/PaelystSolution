@model PaelystSolution.Application.Dtos.LoginUserViewModel;

@{
    ViewBag.Title = "CheckInfo";
}

<h2>Check Info</h2>


<div class="container" style="max-width: 400px; margin: 0 auto; padding: 20px; background-color: #f4f4f4; border-radius: 5px; box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);">
    @using (Html.BeginForm("Get", "User", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required", style = "width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 5px;" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserId)
            @Html.TextBoxFor(model => model.UserId, new { @class = "form-control", required = "required", style = "width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 5px;" })
            @Html.ValidationMessageFor(model => model.UserId)
        </div>

    

        <input type="submit" value="Get" class="btn btn-primary" style="display: inline-block; padding: 10px 20px; background-color: #4caf50; color: #fff; border: none; border-radius: 5px; cursor: pointer;" />
    }
</div>
