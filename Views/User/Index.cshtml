﻿@using PaelystSolution.Application.Dtos;
@model UserViewModel;

<style>
    .form-group label {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-bottom: 10px;
    }
    .progress {
        height: 20px;
        background-color: #f4f4f4;
        border-radius: 5px;
        overflow: hidden;
    }

    .progress-bar {
        height: 100%;
        width: 0;
        background-color: #4caf50;
        color: #fff;
        text-align: center;
        transition: width 0.3s ease-in-out;
    }

    .btn-success {
        display: inline-block;
        padding: 10px 20px;
        background-color: #4caf50;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }

    .btn-success:hover {
            background-color: #45a049;
        }
</style>

<h4>Register User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="progress">
                <div id="pb" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                    0%
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" id="UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserEmail" class="control-label"></label>
                <input asp-for="UserEmail" class="form-control" id="UserEmail" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="BrowseDocuments">Choose file</label>
                <input type="file" name="BrowseDocuments" id="browserDocuments" multiple />

               
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" onclick="return Save()" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function Save() {
            debugger;
            var fileUpload = $("#browserDocuments").get(0);
            var files = fileUpload.files;
            var data = new FormData();

            for (var i = 0; i < files.length; i++) {
                var fname = files[i].name;
                data.append("BrowseDocuments", files[i]);
            }
            data.append("UserName", $("#UserName").val());
            data.append("UserEmail", $("#UserEmail").val());
            
            $.ajax({
                xhr: function () {
                    var xhr = new window.XMLHttpRequest();
                    xhr.upload.addEventListener("progress", function (e) {
                        if (e.lengthComputable) {
                            var loaded = e.loaded;
                            var total = e.total;
                            var percent = Math.round((loaded / total) * 100);

                            $("#pb").attr("aria-valuenow", percent).css("width", percent + "%").text(percent + "%");
                        };

                    });
                    return xhr;
                },
                type: "post",
                url: "/User/Create",
                data: data,
                dataType: "json",
                contentType: false, 
                processData: false,
                cache: false,
                success: function (ss) {

                    alert(ss);
                }
            });
        };
    </script>
}